<Window x:Class="LangStat.Client.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfx="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="MainWindow" Height="400" Width="400" Loaded="Window_Loaded">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Статистики">
                <MenuItem Header="Сохранить..." />
                <MenuItem Header="Загрузить..." />
            </MenuItem>
            <MenuItem Header="Источники"></MenuItem>
            <MenuItem Header="Языки">
                <MenuItem Header="Добавить..." Command="{Binding AddLanguageCommand}" />
            </MenuItem>
            <MenuItem Header="Помощь"></MenuItem>
        </Menu>
        <ContentControl Content="{Binding LanguagesTabsView}" />
    </DockPanel>
</Window>
